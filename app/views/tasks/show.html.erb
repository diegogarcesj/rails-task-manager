
<div class="d-flex justify-content-between align-items-center">
<h1><%= @task.title %></h1>
<%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-outline-secondary" %>
</div>

<div class="alert alert-secondary" role="alert">
  <%= @task.details %>
</div>
<% if @task.completed %>
  <i class="far fa-check-square"></i> This task is completed
<% else %>
  <i class="far fa-square"></i> This task in not completed yet
<% end %>
<hr>
<i class="fas fa-undo"></i> <%= link_to 'Back to list', tasks_path %>
