<h1>My tasks</h1>
<ul class="list-unstyled">
<% @tasks.each do |task| %>
  <li>
    <% if task.completed %>
      <i class="far fa-check-square"></i>
    <% else %>
      <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
  </li>
<% end %>
</ul>
<hr>

<i class="fas fa-plus"></i> <%= link_to "Add a new task", new_task_path %>
